{
    "$schema": "https://biomejs.dev/schemas/1.8.3/schema.json",
    "files": {
      "ignore": ["src/routeTree.gen.ts", "src/gql/*.ts"]
    },
    "organizeImports": {
      "enabled": true
    },
    "formatter": {
      "enabled": true,
      "ignore": [".next", "node_modules"],
      "indentStyle": "space"
    },
    "javascript": {
      "formatter": {
        "quoteStyle": "single"
      }
    },
    "linter": {
      "enabled": true,
      "ignore": [".next", "node_modules"],
      "rules": {
        "suspicious": {
          "noArrayIndexKey": "off"
        },
        "complexity": {
          "noForEach": "off"
        },
        "recommended": true,
        "correctness": {
          "noUnusedVariables": "error",
          "useHookAtTopLevel": "error"
        },
        "style": {
          "noNegationElse": "error",
          "useBlockStatements": "error"
        }
      }
    }
  }